{% extends 'ListBrokingUIBundle::template.html.twig' %}
{% block main_title %}Extraction{% endblock %}
{% block sub_title %}wizard{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <i class="fa fa-wrench"></i>
                    <h3 class="box-title">Configura a new Extraction</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <form role="form">
                                <div class="form-group">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default">Choose</button>
                                        <button type="button" class="btn btn-primary">NEW</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="client">Client</label>
                                    <div class="input-group select2-bootstrap-append">
                                        <select id="client" class="form-control">
                                            <option value="ad">Adclick</option>
                                            <option value="bee">Beeleads</option>
                                        </select>
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#"><i class="fa fa-plus"></i>&#32;New</a></li>
                                                <li><a href="#"><i class="fa fa-pencil-square-o"></i>&#32;Edit</a></li>
                                                <li class="divider"></li>
                                                <li><a href="#"><i class="fa fa-times"></i>&#32;Delete</a></li>
                                            </ul>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="client">Campaign</label>
                                    <div class="input-group select2-bootstrap-append">
                                        <select id="client" class="form-control">
                                            <option value="ad">Cool Campaign</option>
                                            <option value="bee">Not cool campaign</option>
                                        </select>
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#"><i class="fa fa-plus"></i>&#32;New</a></li>
                                                <li><a href="#"><i class="fa fa-pencil-square-o"></i>&#32;Edit</a></li>
                                                <li class="divider"></li>
                                                <li><a href="#"><i class="fa fa-times"></i>&#32;Delete</a></li>
                                            </ul>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="client">Extraction</label>
                                    <div class="input-group select2-bootstrap-append">
                                        <select id="client" class="form-control">
                                            <option value="ad">Extraction 1</option>
                                            <option value="bee">Extraction 2</option>
                                        </select>
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li><a href="#"><i class="fa fa-plus"></i>&#32;New</a></li>
                                                <li><a href="#"><i class="fa fa-pencil-square-o"></i>&#32;Edit</a></li>
                                                <li class="divider"></li>
                                                <li><a href="#"><i class="fa fa-times"></i>&#32;Delete</a></li>
                                            </ul>
                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div><!-- /.row -->
{% endblock %}