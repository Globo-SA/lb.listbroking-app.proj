{% import "@ListBrokingUI/_partials/macros/table_macros.html.twig" as macros %}

<table id="leads_table" class="table table-hover" data-toggle="simple_table" width="100%">
    <thead>
    <tr>
        <th>Phone</th>
        <th>Gender</th>
        <th>Birthdate</th>
        <th>Country</th>
        <th>Postalcode1</th>
        <th>Postalcode2</th>
        <th>District</th>
        <th>County</th>
        <th>Parish</th>
        <th>Owner</th>
        <th>Source</th>
        <th>Category</th>
        <th>SubCategory</th>
        <th>Exclude?</th>
    </tr>
    </thead>
    <tbody>
    {% for contact in extraction.contacts %}
    <tr>
        <td>{{ contact.lead.phone }}</td>
        <td>{{ contact.gender }}</td>
        <td>{{ contact.birthdate|date('Y-m-d') }}</td>
        <td>{{ contact.country }}</td>
        <td>{{ contact.postalcode1 }}</td>
        <td>{{ contact.postalcode2 }}</td>
        <td>{{ contact.district }}</td>
        <td>{{ contact.county }}</td>
        <td>{{ contact.parish }}</td>
        <td>{{ contact.owner }}</td>
        <td>{{ contact.source }}</td>
        <td>{{ contact.subCategory.category }}</td>
        <td>{{ contact.subCategory }}</td>
        <td>
            <div class="btn-group lead_exclude">
                <button class="exclude_lead btn btn-flat btn-xs btn-warning"><i class="fa fa-times"></i></button>
                <button class="confirm_exclude_lead btn btn-flat btn-xs btn-danger" style="display: none;" data-extraction-id="{{ extraction.id }}" data-lead-id="{{ contact.lead.id }}">exclude?</button>
            </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th>Phone</th>
        <th>Gender</th>
        <th>Birthdate</th>
        <th>Country</th>
        <th>Postalcode1</th>
        <th>Postalcode2</th>
        <th>District</th>
        <th>County</th>
        <th>Parish</th>
        <th>Owner</th>
        <th>Source</th>
        <th>Category</th>
        <th>SubCategory</th>
        <th>Exclude?</th>
    </tr>
    </tfoot>
</table>