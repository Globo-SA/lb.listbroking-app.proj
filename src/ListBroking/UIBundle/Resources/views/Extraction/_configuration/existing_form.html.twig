<form id="extraction_chooser" method="post" data-type="simple">
    <div class="form-group">
        <label for="client">Client</label>

        <div class="input-group select2-bootstrap-append">
            <input id="existing_client"
                   type='hidden'
                   name="client"
                   class="form-control"
                   data-select-mode="ajax"
                   data-select-type="client"
                   data-select-child="#existing_campaign"
                   placeholder="Clients list..."
                    >
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary btn-flat dropdown-toggle"
                        data-toggle="dropdown" disabled="disabled">Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#"><i class="fa fa-pencil-square-o"></i>&#32;Edit</a>
                    </li>
                    <li class="divider"></li>
                    <li><a href="#"><i class="fa fa-times"></i>&#32;Delete</a></li>
                </ul>
            </span>
        </div>
    </div>
    <div class="form-group">
        <label for="client">Campaign</label>

        <div class="input-group select2-bootstrap-append">
            <input id="existing_campaign"
                   type='hidden'
                   name="campaign"
                   class="form-control"
                   data-select-mode="ajax"
                   data-select-type="campaign"
                   data-select-parent="#existing_client"
                   data-select-child="#existing_extractions"
                   placeholder="Campaigns list..."
                    >
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary btn-flat dropdown-toggle"
                        data-toggle="dropdown" disabled="disabled">Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#"><i class="fa fa-pencil-square-o"></i>&#32;Edit</a>
                    </li>
                    <li class="divider"></li>
                    <li><a href="#"><i class="fa fa-times"></i>&#32;Delete</a></li>
                </ul>
            </span>
        </div>
    </div>
    <div class="form-group">
        <label for="client">Extraction</label>

        <div class="input-group select2-bootstrap-append">
            <input id="existing_extractions"
                   type='hidden'
                   name="extraction"
                   class="form-control"
                   data-select-mode="ajax"
                   data-select-type="extraction"
                   data-select-parent="#existing_campaign"
                   placeholder="Extractions list..."
                    >
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary btn-flat dropdown-toggle"
                        data-toggle="dropdown" disabled="disabled">Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#"><i class="fa fa-pencil-square-o"></i>&#32;Edit</a>
                    </li>
                    <li class="divider"></li>
                    <li><a href="#"><i class="fa fa-times"></i>&#32;Delete</a></li>
                </ul>
            </span>
        </div>
    </div>
    <button type="submit" class="btn btn-default btn-flat"><i class="fa fa-share"></i>&nbsp;Continue</button>
</form>