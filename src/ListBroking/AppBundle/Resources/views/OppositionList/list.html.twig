{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block list_table %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/listbrokingapp/js/009_opposition_list.js') }}"></script>
    {% include '@ListBrokingApp/OppositionList/import_modal.html.twig' %}
{% endblock list_table %}

{% block sonata_page_content_nav %}
    <nav class="navbar navbar-default" role="navigation">
        {% block tab_menu_navbar_header %}
            {% if _navbar_title is not empty %}
                <div class="navbar-header">
                    <span class="navbar-brand">{{ _navbar_title|raw }}</span>
                </div>
            {% endif %}
        {% endblock %}
        <div class="container-fluid">
            {% if _tab_menu is not empty or _actions is not empty %}
                <div class="navbar-left">
                    {% if _tab_menu is not empty %}
                        {{ _tab_menu|raw }}
                    {% endif %}
                </div>
            {% endif %}
            {% if admin.isGranted('LIST') %}
                <button id="opposition_list_import_trigger" type="button" class="btn btn-primary navbar-btn" data-toggle="modal" data-target="#opposition_list_import_modal"
                        disabled="disabled">Import List
                </button>
                {% if _tab_menu is not empty or _actions is not empty %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown sonata-actions">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'link_actions'|trans({}, 'SonataAdminBundle') }} <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu">
                                {{ _actions|raw }}
                            </ul>
                        </li>
                    </ul>
                {% endif %}
            {% endif %}
        </div>
    </nav>
{% endblock sonata_page_content_nav %}
