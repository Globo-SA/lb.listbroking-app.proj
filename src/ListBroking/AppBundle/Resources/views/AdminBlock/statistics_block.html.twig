{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">{{ title }}</h3>
        </div>
        <div class="box-body">
            <a href="{{ path('admin_listbroking_app_extraction_list') }}" class="center-block btn btn-primary btn-lg">
                <i class="fa fa-filter"></i>&nbsp;START EXTRACTING
            </a>

            <div class="TODO">
                <div class="row">
                    {% for stat in statistics %}
                        <div class="{{ stat.attr }}">
                            <table class="table table-hover">
                                <caption><h4>{{ stat.label }}</h4></caption>
                                <thead>
                                <tr>
                                    {% for header in stat.headers %}
                                        {% if header is empty %}
                                            <th>-</th>
                                        {% else %}
                                            <th>{{ header }}</th>
                                        {% endif %}
                                    {% endfor %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for result in stat.results %}
                                    <tr>
                                        {% for td in result %}
                                            {% if td is empty %}
                                                <td>-</td>
                                            {% else %}
                                                <td>{{ td }}</td>
                                            {% endif %}
                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    {% for td in stat.totals %}
                                        {% if td is empty %}
                                            <th>-</th>
                                        {% else %}
                                            <th>{{ td }}</th>
                                        {% endif %}
                                    {% endfor %}
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <small class="pull-right text-mute">Not implemented yet</small>
        </div>
    </div>
{% endblock %}