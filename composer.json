{
    "name": "adclick/listbroking",
    "license": "Proprietary",
    "type": "project",
    "description": "Here we centralize the information to distribute it",
    "repositories": [
        {
            "url": "git@github.com:adclick/shared.api-abstraction.bndl.git",
            "type": "git"
        },
        {
            "url": "git@github.com:adclick/shared.task-controller.bundle.git",
            "type": "git"
        },
        {
            "url": "git@github.com:adclick/shared.authorization-client.bndl.git",
            "type": "git"
        },
        {
            "url": "git@github.com:adclick/devops.php-standards.conf.git",
            "type": "git"
        },
        {
            "url": "git@github.com:adclick/shared.gdpr.cmp.git",
            "type": "git"
        }
    ],
    "autoload": {
        "psr-4": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "ListBroking\\Tests\\": "Tests/" }
    },
    "require": {
        "php": ">=7.1",
        "symfony/symfony": "~2.8",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "^3.0.2",
        "sensio/distribution-bundle": "^5.0",
        "sensio/framework-extra-bundle": "~3.0",

        "doctrine/orm": "^2.5",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/doctrine-cache-bundle": "^1.2",
        "doctrine/doctrine-migrations-bundle": "^1.2",
        "doctrine/migrations": "^1.5",
        "stof/doctrine-extensions-bundle": "^1.2",
        "beberlei/DoctrineExtensions": "^1.0",

        "twig/extensions": "~1.0",

        "sonata-project/easy-extends-bundle": "~2.1",
        "sonata-project/admin-bundle": "~2.3",
        "sonata-project/doctrine-orm-admin-bundle": "~2.3",
        "sonata-project/user-bundle": "~2.2",

        "knplabs/knp-menu": "~2.1",
        "knplabs/knp-menu-bundle": "~2.1",

        "guzzlehttp/guzzle": "^6.2",
        "misd/guzzle-bundle": "~1.0",

        "friendsofsymfony/jsrouting-bundle": "~1.5",
        "nervo/yuicompressor": "~2.4",
        "oldsound/rabbitmq-bundle": "~1.0",

        "jms/serializer-bundle": "~1.0",
        "phpoffice/phpexcel": "~1.8",

        "commerceguys/addressing": "~0.6",
        "giggsey/libphonenumber-for-php": "~7.0",

        "aws/aws-sdk-php": "^3.8",
        "league/flysystem": "^1.0",
        "league/flysystem-aws-s3-v3" : "^1.0",
        "oneup/flysystem-bundle": "^1.1",
        "ocramius/proxy-manager": "dev-master as 2.0.x-dev",

        "adclick/authorization-client-bundle": "1.*",
        "adclick/api-abstraction-bundle": "1.*",
        "adclick/task-controller-bundle": "1.*",

        "adclick/components-gdpr": "~1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "sensio/generator-bundle": "^3.0",
        "doctrine/doctrine-fixtures-bundle": "^2.3",
        "fzaninotto/faker": "^1.5",
        "adclick/php-standards": "1.*"
    },
    "scripts": {
        "symfony-scripts": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts",
            "cp -nR \"vendor/adclick/php-standards/git/hooks/pre-commit\" \".git/hooks/pre-commit\"",
            "./vendor/bin/phpcs --config-set installed_paths \"`pwd`/vendor/adclick/php-standards/AdclickCS,`pwd`/vendor/escapestudios/symfony2-coding-standard\"",
            "./vendor/bin/phpcs --config-set default_standard AdclickCS"
        ]
    },
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative"
    }
}
