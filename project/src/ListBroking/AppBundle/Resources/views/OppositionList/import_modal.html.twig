<div class="modal fade" id="opposition_list_import_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
                            class="sr-only">Close</span>
                </button>
                <h4 class="modal-title"><i class="fa fa-upload"></i>&nbsp;Import Opposition List</h4>
            </div>
            {{ form_start(import_form) }}
            <div class="modal-body">
                <blockquote class="small-label">
                    {{ form_row(import_form.type) }}
                    {{ form_label(import_form.upload_file) }}
                    <br><br>
                    <span class="btn btn-flat btn-primary fileinput-button form-control">
                        <i class="glyphicon glyphicon-plus"></i>
                        <span>Select file...</span>
                        <!-- The file input field used as target for the file upload widget -->
                        {{ form_widget(import_form.upload_file) }}
                    </span>
                    <small><strong id="files">No file chosen</strong></small>
                    <small>Only XLS or CSV files allowed</small>
                    <small id="fileuploaderror" class="text-danger" style="display: none;"></small>

                    <div class="progress hidden">
                        <div class="progress-bar progress-bar-success"></div>
                    </div>

                    <div class="alert alert-info bigger-space" role="alert">
                        <i class="fa fa-info text-primary"></i>
                        <ul class="smaller-text">
                            <li>Used to update <u>Opposition lists</u> by uploading it's most recent standard file (mapped by List Type)</li>
                            <li>By default then importing a new file the previous values of that given <u>Opposition list</u> are removed</li>
                            <li>Extractions <u>will be blocked</u> while the new Opposition list is being imported</li>
                        </ul>
                    </div>
                </blockquote>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="opposition_list_import_submit" class="btn btn-flat btn-primary"><i class="fa fa-upload"></i>&nbsp;Import</button>
            </div>
            {{ form_rest(import_form) }}
            {{ form_end(import_form) }}
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->
